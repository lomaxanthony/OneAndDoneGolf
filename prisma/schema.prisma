generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String   @unique
  username  String  
  password  String
  picks     Pick[]   
}

model Tournament {
  id        Int     @id @default(autoincrement())
  name      String
  week      Int
  year      Int
  date      DateTime
  picks     Pick[]
  results   Result[]
}

model Golfer {
  id        Int     @id @default(autoincrement())
  name      String
  picks     Pick[]
  results   Result[]
}

model Pick {
  id          Int         @id @default(autoincrement())
  userId      Int         
  user        User        @relation(fields: [userId], references: [id])
  tournId     Int
  tournament  Tournament  @relation(fields: [tournId], references: [id])
  golferId    Int
  golfer      Golfer      @relation(fields: [golferId],references: [id])
  @@unique([userId, tournId])
}

model Result {
  id          Int         @id @default(autoincrement())
  tournId     Int     
  tournament  Tournament  @relation(fields: [tournId], references: [id])
  golferId    Int  
  golfer      Golfer      @relation(fields: [golferId],references: [id])
  earnings    Float
  placement   Int
}

